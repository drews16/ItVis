@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<form method="post" action="/Account/Login">
    <div class="login-form">
        <div class="login-form-content">
            <div class="login-form-title">Вход</div>
            <label>Номер телефона</label>
            <input class="login-form-phone" type="text" name="Phone"/>
            <label>Пароль</label>
            <input class="login-form-password" type="password" name="Password"/>
            <input class="login-form-btn" type="submit" value="Войти" />
            <div class="register-link">Нет аккаунта? <a href="/Account/Register">Регистрация</a></div>
         <div asp-validation-summary="ModelOnly"></div>
        </div>
    </div>
</form>

